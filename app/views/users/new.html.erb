<% provide(:title, 'Sign-Up') %>
<h1>Sign up</h1>

<div class = "row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password_digest %>

      <%= f.submit "Create", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
